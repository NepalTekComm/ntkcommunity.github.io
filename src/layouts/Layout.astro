---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nepal Tek Community - Student-led tech community at NCIT" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 text-slate-900 dark:bg-slate-900 dark:text-slate-50 antialiased">
    <slot />
  </body>
</html>

<!-- Improved utilities with better contrast -->
<style is:global>
  /* Custom Tailwind utilities for NTK brand */
  .gradient-primary {
    background: linear-gradient(135deg, #057ac0, #094671);
  }
  
  .gradient-hero {
    background: linear-gradient(180deg, #0479BC, #004B77);
    background-color: #0479BC; /* Fallback for accessibility */
  }
  
  .gradient-card {
    background: linear-gradient(120deg, rgba(4, 121, 188, 0.1), rgba(0, 75, 119, 0.1));
  }
  
  .glass-effect {
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .glow-effect {
    box-shadow: 0 0 20px rgba(5, 122, 192, 0.3);
  }
  
  /* Ensure hero section has proper background */
  #home {
    background-color: #0479BC !important;
    background-image: linear-gradient(180deg, #0479BC, #004B77) !important;
  }
</style>