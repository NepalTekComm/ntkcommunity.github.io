<section id="team" class="py-20 bg-slate-100/50 dark:bg-slate-800/50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2
        class="text-4xl md:text-5xl font-bold mb-6 text-slate-900 dark:text-slate-50"
      >
        Meet Our <span class="text-ntc-primary">Team</span>
      </h2>
      <p
        class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto text-pretty"
      >
        Our dedicated team of passionate individuals working together to build
        and nurture the tech community at NCIT.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        teamMembers.map((member, index) => (
          <div class="glass-effect border-2 border-[#0479BC]/30 shadow-lg hover:shadow-xl transition-all duration-300 group rounded-lg p-6 text-center">
            <div class="relative mb-6">
              <div class="w-24 h-24 mx-auto rounded-full overflow-hidden ring-4 ring-ntc-primary/20 group-hover:ring-ntc-primary/40 transition-all duration-300">
                <img
                  src={member.image || "/placeholders/placeholder.svg"}
                  alt={member.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                />
              </div>
            </div>

            <h3 class="text-lg font-semibold mb-2 text-slate-900 dark:text-slate-50 group-hover:text-ntc-primary transition-colors">
              {member.name}
            </h3>

            <span class="inline-block bg-ntc-accent/10 text-ntc-accent px-3 py-1 rounded-full text-sm mb-3">
              {member.role}
            </span>

            <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed mb-4">
              {member.bio}
            </p>

            <div class="flex justify-center space-x-3">
              <a
                href={member.social.github}
                class="text-slate-600 dark:text-slate-400 hover:text-ntc-primary transition-colors"
                title="GitHub"
              >
