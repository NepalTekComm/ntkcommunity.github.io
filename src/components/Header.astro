<header class="fixed top-0 left-0 right-0 z-50 bg-[#0479BC] bg-opacity-95 backdrop-blur-sm">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <img src="/images/logos/ntk.jpg" alt="Nepal Tek Community Logo" class="h-8 w-8 rounded-md object-cover" />
        <span class="text-lg font-semibold text-white">Nepal Tek Community</span>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-6">
        <a href="#home" class="text-white hover:text-white/80 text-sm font-medium transition-colors">
          Home
        </a>
        <a href="#about" class="text-white hover:text-white/80 text-sm font-medium transition-colors">
          About
        </a>
        <a href="#events" class="text-white hover:text-white/80 text-sm font-medium transition-colors">
          Events
        </a>
        <a href="#team" class="text-white hover:text-white/80 text-sm font-medium transition-colors">
          Team
        </a>
        <a href="#contact" class="text-white hover:text-white/80 text-sm font-medium transition-colors">
          Contact
        </a>
      </nav>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <button class="bg-white text-[#0479BC] hover:bg-white/90 px-4 py-2 rounded text-sm font-medium transition-colors">
          Join Us
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden text-white" id="mobile-menu-btn">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="menu-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="close-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav class="md:hidden mt-4 pb-4 border-t border-white/20 hidden" id="mobile-menu">
      <div class="flex flex-col space-y-4 pt-4">
        <a href="#home" class="text-white hover:text-white/80 transition-colors">
          Home
        </a>
        <a href="#about" class="text-white hover:text-white/80 transition-colors">
          About
        </a>
        <a href="#events" class="text-white hover:text-white/80 transition-colors">
          Events
        </a>
        <a href="#team" class="text-white hover:text-white/80 transition-colors">
          Team
        </a>
        <a href="#contact" class="text-white hover:text-white/80 transition-colors">
          Contact
        </a>
        <button class="bg-white text-[#0479BC] hover:bg-white/90 px-6 py-2 rounded-md w-full transition-colors">
          Join Us
        </button>
      </div>
    </nav>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
